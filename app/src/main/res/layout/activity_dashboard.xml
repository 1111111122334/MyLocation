<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- CLIENT Layout -->
        <LinearLayout
            android:id="@+id/layoutClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/imageDashboard"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/dashbordagent"
                android:contentDescription="@string/app_name"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenue, Client !"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnGestionOffresClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir les Offres"
                android:layout_marginBottom="12dp"
                android:paddingVertical="12dp" />

            <Button
                android:id="@+id/btnGestionDemandesClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faire une Demande"
                android:layout_marginBottom="12dp"
                android:paddingVertical="12dp" />
        </LinearLayout>

        <!-- AGENT Layout -->
        <LinearLayout
            android:id="@+id/layoutAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/imageDashboard"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/dashbordagent"
                android:contentDescription="@string/app_name"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenue, Agent !"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnGestionOffresAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gérer les Offres"
                android:layout_marginBottom="12dp"
                android:paddingVertical="12dp" />

            <Button
                android:id="@+id/btnConsulterDemandesAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consulter les Demandes"
                android:layout_marginBottom="12dp"
                android:paddingVertical="12dp" />

            <Button
                android:id="@+id/btnGererProfilAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon Profil"
                android:layout_marginBottom="12dp"
                android:paddingVertical="12dp" />

            <Button
                android:id="@+id/btnAjouterOffresAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajouter une Offre"
                android:layout_marginBottom="12dp"
                android:paddingVertical="12dp" />
        </LinearLayout>

        <!-- Bouton de déconnexion -->
        <Button
            android:id="@+id/btnDeconnexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se Déconnecter"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
